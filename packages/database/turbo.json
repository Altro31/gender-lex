{
	"$schema": "https://turborepo.com/schema.json",
	"extends": [
		"//"
	],
	"globalDependencies": [
		"**/.env.*local"
	],
	"tasks": {
		"generate": {
			"cache": true,
			"inputs": [
				"./prisma/schema/**/*.zmodel",
				"./schema.zmodel"
			],
			"outputs": [
				"$TURBO_ROOT$/node_modules/.zenstack/**",
				"$TURBO_ROOT$/node_modules/.prisma/client/**",
				"./prisma/schema.prisma",
				"./openapi.yaml"
			],
			"env": [
				"DATABASE_URL"
			]
		},
		"migrate": {
			"cache": false,
			"env": [
				"DATABASE_URL"
			],
			"interactive": true
		},
		"migrate:prod": {
			"cache": false,
			"env": [
				"DATABASE_URL"
			]
		},
		"studio": {
			"interruptible": true,
			"inputs": [
				"**/*.zmodel"
			],
			"persistent": true
		}
	}
}