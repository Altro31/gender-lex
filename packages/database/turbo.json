{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"tasks": {
		"generate": {
			"cache": true,
			"inputs": ["./prisma/schema/**/*.zmodel", "./schema.zmodel"],
			"outputs": ["./src/generated/**"],
			"env": ["DATABASE_URL"]
		},
		"migrate": {
			"cache": false,
			"env": ["DATABASE_URL"],
			"interactive": true
		},
		"migrate:prod": { "cache": false, "env": ["DATABASE_URL"] },
		"studio": {
			"interruptible": true,
			"inputs": ["**/*.zmodel"],
			"persistent": true
		}
	}
}
