{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"generate": {
			"cache": true,
			"inputs": ["**/*.zmodel"],
			"outputs": [
				"$TURBO_ROOT$/node_modules/.zenstack/**",
				"$TURBO_ROOT$/node_modules/.prisma/client/**",
				"./openapi.yaml"
			],
			"env": ["DATABASE_URL"]
		},
		"migrate": {
			"cache": false,
			"env": ["DATABASE_URL"],
			"interactive": true
		},
		"studio": {
			"interruptible": true,
			"inputs": ["**/*.zmodel"],
			"persistent": true
		}
	}
}
