{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"globalEnv": [
		"AUTH_GOOGLE_ID",
		"BETTER_AUTH_SECRET",
		"BETTER_AUTH_URL",
		"UI_URL",
		"AUTH_GITHUB_ID",
		"AUTH_GITHUB_SECRET",
		"GEMINI_API_KEY",
		"GROQ_API_KEY",
		"PDF_SERVICES_CLIENT_ID",
		"PDF_SERVICES_CLIENT_SECRET",
		"PORT",
		"AUTH_GOOGLE_SECRET",
		"ENCRYPTION_KEY",
		"UMLS_API_KEY",
		"UMLS_API_URL"
	],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true,
			"with": ["@repo/db#studio"]
		},
		"generate": {
			"dependsOn": ["@repo/db#generate"],
			"cache": true,
			"inputs": [
				"$TURBO_ROOT$/packages/database/openapi.yaml",
				"**/*.ts"
			],
			"outputs": ["./public/openapi.yaml"]
		},
		"build": {
			"dependsOn": ["generate"],
			"outputs": ["dist/**", "!tsconfig.build.tsbuildinfo"]
		}
	}
}
