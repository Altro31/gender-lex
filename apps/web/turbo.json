{
  "$schema": "https://turborepo.com/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "@repo/db#generate"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "!.next/dev/**"
      ],
      "env": [
        "PORT",
        "API_URL",
        "NEXT_PUBLIC_API_URL",
        "AUTH_GOOGLE_ID",
        "NEXT_PUBLIC_AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "UI_URL",
        "NEXT_PUBLIC_UI_URL",
        "ENCRYPTION_KEY",
        "DATABASE_URL",
        "GEMINI_API_KEY",
        "NEXT_PUBLIC_VAPID_PUBLIC_KEY",
        "VAPID_PRIVATE_KEY",
        "CHATBOT_PROVIDER_URL",
        "CHATBOT_PROVIDER_API_KEY",
        "CHATBOT_MODEL_IDENTIFIER"
      ]
    }
  }
}