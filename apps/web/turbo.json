{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["@repo/db#generate"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"API_URL",
				"AUTH_GOOGLE_ID",
				"AUTH_GOOGLE_SECRET",
				"AUTH_GITHUB_ID",
				"AUTH_GITHUB_SECRET",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"UI_URL",
				"ENCRYPTION_KEY"
			]
		}
	}
}
