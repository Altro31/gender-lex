{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true,
			"env": [
				"API_URL",
				"AUTH_GOOGLE_ID",
				"AUTH_GOOGLE_SECRET",
				"AUTH_GITHUB_ID",
				"AUTH_GITHUB_SECRET",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"UI_URL",
				"NEXT_PUBLIC_UI_URL"
			]
		},
		"build": {
			"dependsOn": ["generate"],
			"outputs": [".next/**", "!.next/cache/**"],
			"env": [
				"API_URL",
				"AUTH_GOOGLE_ID",
				"AUTH_GOOGLE_SECRET",
				"AUTH_GITHUB_ID",
				"AUTH_GITHUB_SECRET",
				"BETTER_AUTH_SECRET",
				"BETTER_AUTH_URL",
				"UI_URL",
				"NEXT_PUBLIC_UI_URL"
			]
		},
		"generate": {
			"dependsOn": ["api#generate", "@repo/auth#build"],
			"cache": true,
			"inputs": ["$TURBO_ROOT$/apps/api/public/openapi.yaml"],
			"outputs": ["./src/lib/api/types.d.ts"],
			"env": [
				"AUTH_TRUST_HOST",
				"AUTH_SECRET",
				"AUTH_GOOGLE_ID",
				"AUTH_GOOGLE_SECRET",
				"API_URL"
			]
		}
	}
}
