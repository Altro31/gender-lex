{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"globalDependencies": ["**/.env.*local"],
	"tasks": {
		"generate": {
			"dependsOn": ["^generate", "api#generate"],
			"cache": true,
			"inputs": ["$TURBO_ROOT$/apps/api/public/openapi.yaml"],
			"outputs": ["./src/lib/api/types.d.ts"],
			"env": [
				"AUTH_TRUST_HOST",
				"AUTH_SECRET",
				"AUTH_GOOGLE_ID",
				"AUTH_GOOGLE_SECRET",
				"FLAG_REACT_SCAN",
				"API_URL"
			]
		}
	}
}
