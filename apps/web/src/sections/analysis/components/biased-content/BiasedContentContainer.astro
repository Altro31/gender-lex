---
import BiasedContentItem from '@/sections/analysis/components/biased-content/BiasedContentItem.astro'
import type { BiasedITem } from '@zenstackhq/runtime/models'
import { Card, CardContent, CardHeader, CardTitle } from '~ui/card'

interface Props {
    data: BiasedITem[]
    title: string
}

const { data, title } = Astro.props
---

<Card>
    <CardHeader><CardTitle>{title}</CardTitle></CardHeader>
    <CardContent>
        {data.map((term) => <BiasedContentItem data={term} />)}
    </CardContent>
</Card>
