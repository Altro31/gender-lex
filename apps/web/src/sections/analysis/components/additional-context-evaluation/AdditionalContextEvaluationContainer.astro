---
import AdditionalContextEvaluationItem from '@/sections/analysis/components/additional-context-evaluation/AdditionalContextEvaluationItem.astro'
import type { AdditionalContextEvaluation } from '@zenstackhq/runtime/models'
import { Card, CardContent, CardHeader, CardTitle } from '~ui/card'

interface Props {
    data: AdditionalContextEvaluation
}

const { data } = Astro.props
---

<Card>
    <CardHeader
        ><CardTitle>Evaluación de Contexto Adicional</CardTitle></CardHeader
    >
    <CardContent className="flex justify-around flex-wrap gap-4">
        <AdditionalContextEvaluationItem
            data={data.stereotype}
            title="Estereotipo"
        />
        <AdditionalContextEvaluationItem
            data={data.powerAsymmetry}
            title="Asimetría de Poder"
        />
        <AdditionalContextEvaluationItem
            data={data.genderRepresentationAbsence}
            title="Ausencia de Representación de Género"
        />
    </CardContent>
</Card>
